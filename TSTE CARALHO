                            <td><?= htmlspecialchars($row['relato']) ?></td>
                            <td><?php if($row['disponibilizado'] == 1) { echo "Mostrando";} else { echo "Oculto";} ?></td>
                            <?php if($row['disponibilizado'] == 1) {
                                    echo "<td><button onclick='abrirOcultar(" . $row['id_relato'] . ")'>Ocultar</button></td>";
